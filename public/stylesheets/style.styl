body,html
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  height 100%
a
  color: #00B7FF
.container
  flex 1


.container.row .nav-link.active
  background-color darkslategray

iframe
   width 100%
   height 80%
#clinicalLogBookContainer,#clinicalChartContainer,#lepAssessmentsContainer
   margin-top 100px
   height 100%


h1,
h2,
h3,
h4,
h5,
h6

  font-weight 700 !important

.btn-xl
  text-transform uppercase
  padding 1.5rem 3rem
  font-size 0.9rem
  font-weight 700
  letter-spacing 0.1rem

.bg-black
  background-color #000 !important

.rounded-pill
  border-radius 5rem

.navbar-custom
  padding-top 1rem
  padding-bottom 1rem
  background-color rgba(0, 0, 0, 0.7)
  .navbar-brand
    text-transform uppercase
    font-size 1rem
    letter-spacing 0.1rem
    font-weight 700
  .navbar-nav
    .nav-item
      .nav-link
        text-transform uppercase
        font-size 0.8rem
        font-weight 700
        letter-spacing 0.1rem

header
  &.masthead
    background-image: url('../images/MedicalImaging.jpg');
    position relative
    overflow hidden
    padding-top calc(7rem + 72px)
    padding-bottom 7rem
    background-repeat no-repeat
    background-position center center
    background-attachment scroll
    background-size cover
    .container

      border-top: solid 6px #008075
      background-color: white
      box-shadow: 0 1px 4px 0 rgba(35, 31, 32, 0.25)
    .masthead-content
      z-index 1
      color rebeccapurple
      position relative
      .masthead-heading
        color #1b1e21
        font-size 3rem
      .masthead-subheading
        color #008075
        font-size 1.5rem


@media (min-width: 992px)
  header
    &.masthead
      padding-top calc(10rem + 55px)
      padding-bottom 10rem
      .masthead-content
        .masthead-heading
          color #1b1e21
          font-size 4rem
        .masthead-subheading
          color #008075
          font-size 2rem
  #clinicalExaminationsTotal,#clinicalExaminationsCategory,#clinicalExaminationsSubcategory
       height 600px

.bg-primary
  background-color #ee0979 !important

.btn-primary
  background-color #ee0979
  border-color #ee0979
  &:focus
    -webkit-box-shadow 0 0 0 0.2rem rgba(238, 9, 121, 0.5)
    box-shadow 0 0 0 0.2rem rgba(238, 9, 121, 0.5)

.btn-primary:active, .btn-primary:focus, .btn-primary:hover
  background-color #bd0760 !important
  border-color #bd0760 !important

.btn-secondary
  background-color #ff6a00
  border-color #ff6a00
  &:focus
    -webkit-box-shadow 0 0 0 0.2rem rgba(255, 106, 0, 0.5)
    box-shadow 0 0 0 0.2rem rgba(255, 106, 0, 0.5)

.btn-secondary:active, .btn-secondary:focus, .btn-secondary:hover
  background-color #cc5500 !important
  border-color #cc5500 !important

.display-4
  color #008075
footer
  width 100%

