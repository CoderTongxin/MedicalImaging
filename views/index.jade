          // count appearance

          function getChartData(arr) {
              var a = [], b = [], prev;

              for (var i = 0; i < arr.length; i++) {
                  if (arr[i] !== prev) {
                      a.push(arr[i]);
                      b.push(1);
                  } else {
                      b[b.length - 1]++;
                  }
                  prev = arr[i];
              }

              var chartData=[]
              for(var j = 0; j < a.length; j++){
                  chartData.push([a[j],b[j]])
              }

              return chartData;
          }

